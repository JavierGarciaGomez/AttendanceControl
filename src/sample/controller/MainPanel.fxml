      <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="4">
         <image>
            <Image url="@../../res/Morgana.png" />
         </image></ImageView>
      <Label alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" text="Javier Humberto García Gómez" textAlignment="CENTER" wrapText="true" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowSpan="2">
